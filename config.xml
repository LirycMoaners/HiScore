<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cyrillefebvre.hiscore" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HiScore</name>
    <description>
        An app to keep player's score during your games.
    </description>
    <author email="cyril.lefebvre.27@gmail.com" href="https://github.com/LirycMoaners/HiScore">
        Cyril Lefebvre
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" height="72" src="res/icon/android/icon-72x72.png" width="72" />
        <icon density="mdpi" height="96" src="res/icon/android/icon-96x96.png" width="96" />
        <icon density="hdpi" height="128" src="res/icon/android/icon-128x128.png" width="128" />
        <icon density="xhdpi" height="144" src="res/icon/android/icon-144x144.png" width="144" />
        <icon density="xhdpi" height="152" src="res/icon/android/icon-152x152.png" width="152" />
        <icon density="xhdpi" height="192" src="res/icon/android/icon-192x192.png" width="192" />
        <icon density="xhdpi" height="384" src="res/icon/android/icon-384x384.png" width="384" />
        <icon density="xhdpi" height="512" src="res/icon/android/icon-512x512.png" width="512" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-fullscreen" spec="^1.2.0" />
    <engine name="android" spec="^7.0.0" />
</widget>
